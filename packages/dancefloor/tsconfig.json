{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "noEmitHelpers": false,
    "declaration": true,
    "declarationDir": "dist",
    "lib": [
      "ES5", "ES2015", "ES2016", "ES2017", "ES2018",
      "ES2019", "ES2020", "ES2021", "ESNext", "DOM"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "vite/client",
      "node"
    ],
    "outDir": "dist"
  },
  "include": [
    "./lib/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
